generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Order {
  id         String   @id @map("_id") @default(auto()) @db.ObjectId
  externalId String   @unique
  userId     Int
  items      Json
  amount     Float
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
