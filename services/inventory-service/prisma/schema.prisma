generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  name      String
  price     Float
  stock     Int
  createdAt DateTime @default(now())
}

model Reservation {
  id         String   @id @map("_id") @default(auto()) @db.ObjectId
  orderId    String   @unique
  items      Json
  reservedAt DateTime @default(now())
}
